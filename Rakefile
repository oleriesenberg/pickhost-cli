# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.spec 'pickhost-cli' do
  self.developer('Ole Riesenberg', 'or@oleriesenberg.com')
  self.url = "http://github.com/Hoodow/pickhost-cli"
  self.description = "Command line uploader for pickhost.eu"
  self.extra_deps = [
    ['httpclient','>= 2.1.5.2']
  ]
end

